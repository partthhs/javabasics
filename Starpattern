import java.util.Scanner;
public class Pattern {

    public static void main(String[]args)
    {
        Scanner ob=new Scanner(System.in);
        System.out.print("Enter number of rows= ");
        int r=ob.nextInt();
        for(int i=1;i<=r;i++)
        {
            for(int j=1;j<=i;j++)
            {
                System.out.print("*");
            }
            System.out.println();
        }
        
        ob.close();
    }
    
}
